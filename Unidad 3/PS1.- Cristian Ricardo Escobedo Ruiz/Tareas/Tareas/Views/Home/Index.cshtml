@model IEnumerable<Tareas.Models.Movies>

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Catalogo De Peliculas</title>

    <!-- Bootstrap Core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/Content/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
    <link href="~/Content/simple-line-icons/css/simple-line-icons.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/Content/css/stylish-portfolio.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Navigation -->
    <a class="menu-toggle rounded" href="#">
        <i class="fas fa-bars"></i>
    </a>
    <nav id="sidebar-wrapper">
        <ul class="sidebar-nav">
            <li class="sidebar-brand">
                <a class="js-scroll-trigger" href="#page-top">Bienvenido</a>
            </li>
            <li class="sidebar-nav-item">
                <a class="js-scroll-trigger" href="@Url.Action("Index","Home")">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="sidebar-nav-item">
                <a class="js-scroll-trigger" href="@Url.Action("About","Home")">Acerca de</a>
            </li>
            <li class="sidebar-nav-item">
                <a class="js-scroll-trigger" href="@Url.Action("Index","Generoes")">Genero</a>
            </li>
            <li class="sidebar-nav-item">
                <a class="js-scroll-trigger" href="@Url.Action("Index","Movies")">Peliculas</a>
            </li>
            <li class="sidebar-nav-item">
                <a class="js-scroll-trigger" href="@Url.Action("Contact","Home")">Contacto</a>
            </li>
        </ul>
    </nav>

    <!-- Header -->
    <header class="masthead d-flex">
        <div class="container text-center my-auto" style="color:#FFF">
            <h1 class="mb-1">Catalogo De Peliculas</h1>
            <h3 class="mb-5">
                <em>PS1.- Pratica Semanal</em>
            </h3>
            <a class="btn btn-primary btn-xl js-scroll-trigger" href="#catalogo">Ver Catalogo</a>
        </div>
        <div class="overlay"></div>
    </header>



        <section class="content-section bg-light" id="catalogo">
            <div class="row" style="margin-right:0px; padding-right:5%; padding-left:5%">
                @foreach (var item in Model)
                {
                    <div class="col-6 col-md-3">
                        <div class="card" style="width: 18rem; top:5%">
                            <img class="card-img-top" src="@Html.DisplayFor(modelItem => item.UrlImagen)" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card -title">@Html.DisplayFor(modelItem => item.Nombre)</h5>
                                <p class="card-text">@Html.DisplayFor(modelItem => item.Resumen)</p>
                            </div>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">@Html.DisplayFor(modelItem => item.Genero.NomGenero)</li>
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </section>





        <!-- Footer -->
        <footer class="footer text-center">
            <div class="container">
                <ul class="list-inline mb-5">
                    <li class="list-inline-item">
                        <a class="social-link rounded-circle text-white" href="https://github.com   /OrigenData">
                            <i class="icon-social-github"></i>
                        </a>
                    </li>
                </ul>
                <p class="text-muted small mb-0">Copyright &copy; Your Website 2019</p>
            </div>
        </footer>

        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded js-scroll-trigger" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>

        <!-- Bootstrap core JavaScript -->
        <script src="~/Scripts/jquery-3.4.1.min.js"></script>
        <script src="~/Scripts/bootstrap.bundle.min.js"></script>

        <!-- Plugin JavaScript -->
        <script src="~/Scripts/jquery-easing/jquery.easing.min.js"></script>

        <!-- Custom scripts for this template -->
        <script src="~/Scripts/js/stylish-portfolio.min.js"></script>

    </body>

</html>
